# ==============================================
# BROCRAFT - Environment Variables Example
# ==============================================
# Copie este arquivo para .env e preencha os valores

# ------------------------------------
# Frontend (VITE_* sao expostas ao client)
# ------------------------------------
VITE_APP_LOGO=/icons/icon-512.svg
VITE_APP_TITLE=BROCRAFT - Assistente de Fermentacao

# Analytics (opcional - deixe vazio para desabilitar)
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# ------------------------------------
# Core / Application
# ------------------------------------
NODE_ENV=development
VITE_APP_ID=brocraft

# ------------------------------------
# Database (CRITICO)
# ------------------------------------
DATABASE_URL=mysql://user:password@localhost:3306/brocraft

# ------------------------------------
# Authentication (CRITICO)
# ------------------------------------
JWT_SECRET=sua-chave-secreta-jwt-muito-segura-aqui
OAUTH_SERVER_URL=https://seu-oauth-server.com
OWNER_OPEN_ID=seu-open-id

# ------------------------------------
# LLM / Forge API
# ------------------------------------
BUILT_IN_FORGE_API_URL=https://api.forge.com
BUILT_IN_FORGE_API_KEY=sua-api-key-forge

# ------------------------------------
# Stripe (Opcional - pagamentos)
# ------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_MESTRE=price_...
STRIPE_PRICE_CLUBE_BRO=price_...

# ------------------------------------
# Redis/Upstash (Opcional - cache)
# ------------------------------------
UPSTASH_REDIS_URL=https://seu-redis.upstash.io
UPSTASH_REDIS_TOKEN=seu-token

# ------------------------------------
# Monitoring (Opcional)
# ------------------------------------
SENTRY_DSN=https://xxx@sentry.io/xxx
ENABLE_SENTRY=false

# ------------------------------------
# Rate Limiting
# ------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_CHAT=30
RATE_LIMIT_MAX_BILLING=10
RATE_LIMIT_MAX_COMMUNITY=60

# ------------------------------------
# URLs
# ------------------------------------
FRONTEND_BASE_URL=http://localhost:5173
